{
  "name": "@bentley/ecjs",
  "version": "0.0.3-beta-2",
  "description": "ECObjects core concepts in typescript",
  "license": "UNLICENSED",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "http://tfs.bentley.com/tfs/ProductLine/Platform%20Technology/_git/ec-js"
  },
  "scripts": {
    "clean": "rimraf lib .nyc_output",
    "lint": "node ./node_modules/@bentley/bentleyjs-tools/scripts/tslint.js",
    "prebuild": "npm run lint & npm run clean",
    "build": "tsc",
    "test": "node ./node_modules/@bentley/bentleyjs-tools/scripts/test-tsnode.js --testDir=./test/ --tscPaths",
    "test:watch": "node ./node_modules/@bentley/bentleyjs-tools/scripts/test-tsnode.js --testDir=./test/ --watch",
    "docs": "node ./node_modules/@bentley/bentleyjs-tools/scripts/docs.js --onlyJson --json=lib/docs/json/ec-js/file.json",
    "docs:dev": "npm run docs && bmsWatch --source ./lib/docs --destination public --typeDocSource C:/dev/imodeljs/ecobjects-js/source",
    "cover": "nyc npm run test",
    "start": "npm run build && npm run test && npm run docs"
  },
  "keywords": [
    "Bentley",
    "iModel",
    "iModelJs",
    "EC"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "devDependencies": {
    "@bentley/bemetalsmith": "^1.16.1",
    "@bentley/bentleyjs-tools": "^1.0.55",
    "@types/chai": "^4.0.7",
    "@types/mocha": "^2.2.44",
    "nyc": "^11.4.0",
    "rimraf": "^2.6.2",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.1"
  },
  "dependencies": {
    "@bentley/bentleyjs-core": "^1.0.46"
  },
  "nyc": {
    "include": [
      "source/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "report-dir": "./lib/test/coverage"
  }
}
