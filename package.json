{
  "name": "imodeljs-core",
  "//private": "NOTE: This 'root' package is private. It is never published",
  "private": true,
  "description": "iModelJs core components",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://tfs.bentley.com/tfs/ProductLine/Platform%20Technology/_git/imodeljs-core"
  },
  "scripts": {
    "build": "",
    "clean": "echo NOTE: use 'rush clean' instead",
    "lint": "node node_modules/@bentley/bentleyjs-tools/scripts/tslint.js",
    "preinstall": "echo ERROR: use 'rush install' instead && exit 1",
    "install-imodeljs-addon": "installImodelJsNative",
    "publish:bentley": "cd core/bentley && npm publish",
    "publish:geometry": "cd core/geometry && npm publish",
    "publish:common": "cd core/common && npm publish",
    "publish:backend": "cd core/backend && npm publish",
    "publish:frontend": "cd core/frontend && npm publish",
    "predocs": "npm run extract",
    "docs": "concurrently \"npm run docs:backend\" \"npm run docs:frontend\" \"npm run docs:common\"",
    "docs:backend": "node node_modules/@bentley/bentleyjs-tools/scripts/docs.js --source=./core/backend/src  --baseUrl=./sample-code/node_modules --includes=generated-docs/extract --excludes=testbed,frontend,common,assets  --out=./generated-docs/backend  --json=./generated-docs/backend/json/file.json  %TYPEDOC_THEME%",
    "docs:frontend": "node node_modules/@bentley/bentleyjs-tools/scripts/docs.js --source=./core/frontend/src --baseUrl=./sample-code/node_modules --includes=generated-docs/extract --excludes=testbed,backend,common,assets   --out=./generated-docs/frontend --json=./generated-docs/frontend/json/file.json %TYPEDOC_THEME%",
    "docs:common": "node node_modules/@bentley/bentleyjs-tools/scripts/docs.js --source=./core/common/src --baseUrl=./sample-code/node_modules --includes=generated-docs/extract --excludes=testbed,frontend,backend,assets --out=./generated-docs/common   --json=./generated-docs/common/json/file.json   %TYPEDOC_THEME%",
    "watch:docs": "bmsWatch --source ./core --typeDocSource ./core --typeDocJsonFile ./testbed/lib/docs/json/file.json --typeDocScript ./node_modules/@bentley/bentleyjs-tools/scripts/docs.js",
    "extract": "node node_modules/@bentley/bentleyjs-tools/scripts/extract.js --fileExt=ts --extractFrom=./sample-code/backend --out=./generated-docs/extract",
    "test": "npm run test:bentley && npm run test:geometry && npm run test:backend && npm run test:frontend && npm run test:sample-code",
    "test:bentley": "cd core/bentley && npm run test",
    "test:geometry": "cd core/geometry && npm run test",
    "test:backend": "cd core/backend && npm run test",
    "test:backendwebpackformobile": "cd core/backend && npm run webpackformobile",
    "test:frontend": "cd testbed && npm run build && node bin/testbed.js",
    "test:sample-code": "cd sample-code && npm run test",
    "test:perf": "cd core/backend && npm run perftest",
    "testbed": "cd testbed && node bin/testbed.js --debug",
    "cover:geometry": "cd core/geometry && npm run cover",
    "cover:backend": "cd core/backend && npm run cover",
    "module:backend": "cd core/backend && node ../../node_modules/@bentley/bentleyjs-tools/scripts/mastermodule --includes=../common --recursively=true",
    "module:frontend": "cd core/frontend && node ../../node_modules/@bentley/bentleyjs-tools/scripts/mastermodule --includes=../common --recursively=true",
    "updateNativeToTsDictionary": "node ./tasks/updateNativeToTsDictionary.js"
  },
  "keywords": [
    "Bentley",
    "BIM",
    "iModel"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "//dependencies": [
    "NOTE: dependencies will be empty here and specified in core/common, core/backend, core/frontend, and testbed."
  ],
  "//devDependencies": [
    "NOTE: These are the union of all devDependencies for core/common, core/backend, core/frontend, and testbed",
    "WIP: Temporarily workaround monorepo/symlink issues by adding a devDependencies on @bentley/bentleyjs-core and @bentley/geometry-core",
    "WIP: bentleyjs-core@7.3.2 is a peer dependency of imodeljs-clients@5.1.0"
  ],
  "devDependencies": {
    "@bentley/bentleyjs-core": "7",
    "@bentley/bentleyjs-tools": "^3.2.5",
    "@bentley/geometry-core": "7",
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.1.2",
    "@types/express": "^4.11.1",
    "@types/express-serve-static-core": "^4.11.1",
    "@types/fs-extra": "^4.0.7",
    "@types/i18next": "^8.4.2",
    "@types/i18next-browser-languagedetector": "^2.0.1",
    "@types/i18next-xhr-backend": "^1.4.1",
    "@types/js-base64": "^2.3.1",
    "@types/lodash": "4.14.106",
    "@types/mocha": "^2.2.47",
    "@types/node": "^9.4.5",
    "@types/serve-static": "^1.13.1",
    "@types/tapable": "^0.2.4",
    "@types/uglify-js": "^2.6.30",
    "@types/webpack": "^3.8.5",
    "chai": "^4.1.2",
    "commander": "^2.14.1",
    "concurrently": "^3.5.1",
    "cpx": "^1.5.0",
    "debug-fabulous": "^0.1.2",
    "diff": "^3.3.1",
    "duplexify": "^3.5.1",
    "fs-extra": "^5.0.0",
    "inherits": "^2.0.3",
    "mocha": "^3.5.3",
    "node-replace": "^0.3.3",
    "null-loader": "latest",
    "object-assign": "^4.1.1",
    "once": "^1.4.0",
    "os-locale": "^2.1.0",
    "resolve": "^1.5.0",
    "rimraf": "^2.6.2",
    "semver": "^5.5.0",
    "source-map-loader": "^0.2.3",
    "source-map-support": "^0.5.0",
    "string-width": "^2.1.1",
    "ts-node": "^3.3.0",
    "tsconfig-paths": "^2.7.2",
    "typemoq": "^2.1.0",
    "tslint": "^5.9.0",
    "typedoc": "^0.11.1",
    "typedoc-plugin-markdown": "^1.0.14",
    "typescript": "~2.7.2",
    "webpack": "^3.10.0",
    "webpack-stream": "latest"
  }
}