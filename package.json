{
  "name": "@bentley/imodeljs-core",
  "version": "1.1.8",
  "description": "iModel.js core components",
  "license": "UNLICENSED",
  "main": "./lib/main",
  "repository": {
    "type": "git",
    "url": "https://tfs.bentley.com/tfs/ProductLine/Platform%20Technology/_git/imodeljs-core"
  },
  "scripts": {
    "build": "gulp build",
    "build-release": "gulp build --release",
    "wip-build": "concurrently \"npm run build:backend\" \"npm run build:frontend\" \"npm run build:test\"",
    "build:backend": "cd source/backend && npm run build",
    "build:frontend": "cd source/frontend && npm run build",
    "build:test": "cd source/test && npm run build",
    "clean": "gulp clean",
    "postclean": "concurrently \"npm run clean:backend\" \"npm run clean:frontend\" \"npm run clean:test\"",
    "clean:backend": "cd source/backend && npm run clean",
    "clean:dependencies": "concurrently \"rimraf source/backend/node_modules\" \"rimraf source/frontend/node_modules\" \"rimraf source/test/node_modules\"",
    "clean:frontend": "cd source/frontend && npm run clean",
    "clean:test": "cd source/test && npm run clean",
    "findstr:bentley-dependencies": "findstr /c:\"\\\"@bentley\" package.json source\\backend\\package.json source\\frontend\\package.json source\\test\\package.json",
    "lint": "node node_modules/@bentley/bentleyjs-tools/scripts/tslint.js",
    "test": "gulp test",
    "wip-test": "cd source/test && npm run test",
    "postinstall": "npm run install:imodeljs-addon",
    "wip-install": "concurrently \"npm run install:backend\" \"npm run install:frontend\" \"npm run install:test\"",
    "install:backend": "cd source/backend && npm install",
    "install:frontend": "cd source/frontend && npm install",
    "install:imodeljs-addon": "node scripts/install-imodeljs-addon.js",
    "install:test": "cd source/test && npm install",
    "docs": "node node_modules/@bentley/bentleyjs-tools/scripts/docs.js --baseUrl=source/test/node_modules --includes=source/test/lib/extract --out=lib/docs --json=lib/docs/json/file.json",
    "extract": "node node_modules/@bentley/bentleyjs-tools/scripts/extract.js --extractFrom=source/test --out=source/test/lib/extract"
  },
  "keywords": [
    "Bentley",
    "BIM",
    "iModel"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "//dependencies": "NOTE: after the package split, dependencies will be empty here and specified in source/frontend and/or source/backend.",
  "dependencies": {
    "@bentley/bentleyjs-core": "^1.0.39",
    "@bentley/geometry-core": "^1.0.23",
    "@bentley/imodeljs-clients": "^1.0.31",
    "js-base64": "^2.3.2"
  },
  "//devDependencies": "NOTE: These are the union of all devDependencies for source/frontend, source/backend, and source/test",
  "devDependencies": {
    "@bentley/bentleyjs-tools": "^1.0.53",
    "@types/chai": "^4.0.4",
    "@types/flatbuffers": "^1.6.5",
    "@types/fs-extra": "^4.0.5",
    "@types/js-base64": "^2.3.0",
    "@types/mocha": "^2.2.44",
    "chai": "^4.1.2",
    "commander": "^2.11.0",
    "concurrently": "^3.5.0",
    "cpx": "^1.5.0",
    "debug-fabulous": "^0.1.2",
    "diff": "^3.3.1",
    "duplexify": "^3.5.1",
    "fs-extra": "latest",
    "gulp": "latest",
    "gulp-tslint": "^8.1.2",
    "gulp-typescript": "^3.2.3",
    "inherits": "^2.0.3",
    "mocha": "^3.5.3",
    "object-assign": "^4.1.1",
    "once": "^1.4.0",
    "os-locale": "^2.1.0",
    "resolve": "^1.5.0",
    "rimraf": "^2.6.2",
    "semver": "^5.4.1",
    "source-map-support": "^0.5.0",
    "string-width": "^2.1.1",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1"
  }
}
