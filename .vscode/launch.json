{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Web: All",
      "configurations": [
        "Web: Server (backend)",
        "Web: Chrome (frontend)"
      ]
    },
    {
      "name": "Electron: All",
      "configurations": [
        "Electron: Main (backend)",
        "Electron: Renderer (frontend)"
      ]
    }
  ],
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Tests: Backend",
      "protocol": "inspector",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "cwd": "${workspaceFolder}/src/backend",
      "env": {
        "TS_NODE_CACHE_DIRECTORY": "${workspaceRoot}/ts-node"
      },
      "args": [
        "--opts",
        "../../mocha.opts",
        "--timeout",
        "0",
        "${workspaceFolder}/src/backend/**/*.test.ts"
      ],
      "runtimeArgs": [
        "--inspect-brk"
      ],
      "outFiles": ["${workspaceRoot}/ts-node/**"],
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Tests: Frontend",
      "protocol": "inspector",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "cwd": "${workspaceFolder}/src/frontend",
      "env": {
        "TS_NODE_CACHE_DIRECTORY": "${workspaceRoot}/ts-node"
      },
      "args": [
        "--opts",
         "../../mocha.opts",
        "--timeout",
         "0",
        "${workspaceFolder}/src/frontend/**/*.test.ts"
      ],
      "runtimeArgs": [
        "--inspect-brk"
      ],
      "outFiles": ["${workspaceRoot}/ts-node/**"],
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Tests: Integration",
      "protocol": "inspector",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "cwd": "${workspaceFolder}/src/test",
      "env": {
        "TS_NODE_CACHE_DIRECTORY": "${workspaceRoot}/ts-node"
      },
      "args": [
        "--opts",
        "../../mocha.opts",
        "--timeout",
        "0",
        "${workspaceFolder}/src/test/**/SelectionManagerImpl.test.ts"
      ],
      "runtimeArgs": [
        "--inspect-brk"
      ],
      "outFiles": ["${workspaceRoot}/ts-node/**"],
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Web: Server (backend)",
      "protocol": "inspector",
      "program": "${workspaceFolder}/src/sample/node_modules/@bentley/imodeljs-react-scripts/bin/imodeljs-react-scripts",
      "cwd": "${workspaceFolder}/src/sample",
      "args": [
        "start",
        "--noElectron",
        "--debug=41016"
      ],
      "runtimeArgs": [
        "--preserve-symlinks"
      ],
      "port": 41016,
      "env": {
        "BROWSER": "none"
      },
      "timeout": 30000
    },
    {
      "name": "Web: Chrome (frontend)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000/",
      "webRoot": "${workspaceFolder}/src/sample",
      "sourceMapPathOverrides": {
        // map sources from node_modules to our source directory
        "webpack:///../frontend/*": "${workspaceFolder}/src/frontend/*",
        // below are default values taken from https://github.com/Microsoft/vscode-chrome-debug
        "webpack:///./~/*": "${webRoot}/node_modules/*",
        "webpack:///./*":   "${webRoot}/*",
        "webpack:///*":     "*",
        "webpack:///src/*": "${webRoot}/*",
      },
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Electron: Main (backend)",
      "protocol": "legacy",
      "runtimeExecutable": "node",
      "cwd": "${workspaceFolder}/src/sample",
      "args": [
        "${workspaceFolder}/src/sample/node_modules/@bentley/imodeljs-react-scripts/scripts/start",
        "--electronDebug=5858",
        "--electronRemoteDebug=9223"
      ],
      "port": 5858,
      "env": {
        "BROWSER": "none"
      },
      "timeout": 30000
    },
    {
      "name": "Electron: Renderer (frontend)",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}/src/sample",
      "sourceMapPathOverrides": {
        // map sources from node_modules to our source directory
        "webpack:///./~/@bentley/ecpresentation-frontend/*": "${workspaceFolder}/src/frontend/*",
        // below are default values taken from https://github.com/Microsoft/vscode-chrome-debug
        "webpack:///./~/*": "${webRoot}/node_modules/*",
        "webpack:///./*": "${webRoot}/*",
        "webpack:///*": "*",
        "webpack:///src/*": "${webRoot}/*",
      },
      "timeout": 30000
    }
  ]
}