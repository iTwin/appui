{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Tests",
      "program": "${workspaceFolder}/node_modules/@bentley/bentleyjs-tools/scripts/test",
      "cwd": "${workspaceFolder}",
      "args": [
        "--packageRoot=${workspaceFolder}",
        "--testDir=${workspaceFolder}/source/backend/lib/backend/test",
        "--debug"
      ],
      "port": 9229,
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "_Testbed (backend)",
      "cwd": "${workspaceFolder}/source/testbed/",
      "runtimeExecutable": "${workspaceFolder}\\source\\testbed\\node_modules\\.bin\\electron",
      "runtimeArgs": [
        "${workspaceFolder}/source/testbed/node_modules/floss/electron/index.js",
        "{\"debug\":true, \"noDevTools\":true, \"path\":\"lib/testbed/frontend/index.js\", \"grep\":\"\", \"fgrep\":\"\"}",
        "--debug-brk=5858",
        "--remote-debugging-port=9223"
      ],
      "protocol": "legacy",
      "port": 5858,
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/source/testbed/lib/**/*.js"
      ]
    },
    {
      "name": "_Testbed (frontend)",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceRoot}",
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "Run Testbed (all)",
      "configurations": [
        "_Testbed (frontend)",
        "_Testbed (backend)"
      ]
    }
  ]
}