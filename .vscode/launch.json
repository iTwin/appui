{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Tests",
      "program": "${workspaceFolder}/node_modules/@bentley/bentleyjs-tools/scripts/test",
      "cwd": "${workspaceFolder}",
      "args": [
        "--packageRoot=${workspaceFolder}",
        "--testDir=${workspaceFolder}/source/test/lib/test",
        "--debug"
      ],
      "port": 9229,
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run testbed",
      "cwd": "${workspaceFolder}/source/testbed/",
      "runtimeExecutable": "${workspaceFolder}/source/testbed/node_modules/.bin/electron",
      "runtimeArgs": [
        "${workspaceFolder}/source/testbed/node_modules/floss/electron",
        "{\"debug\":true, \"path\":\"lib/frontend/index.js\"}",
        "--debug-brk=5858"
      ],
      "protocol": "legacy",
      "port": 5858
    }
  ]
}