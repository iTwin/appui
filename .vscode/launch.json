{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceRoot}/lib/**/*.test.js"
      ],
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "WIP - Mocha Tests",
      "program": "${workspaceFolder}/source/test/node_modules/@bentley/bentleyjs-tools/scripts/test.js",
      "cwd": "${workspaceFolder}/source/test",
      "args": [
        "--packageRoot=${workspaceFolder}/source/test",
        "--testDir=${workspaceFolder}/source/test/lib/test",
        "--debug"
      ],
      "port": 9229,
      "protocol": "inspector",
      "env":{
        "ADDON_PATH": "../source/test/node_modules/"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "WIP - Mocha Tests - ts-node",
      "program": "${workspaceFolder}/source/test/node_modules/@bentley/bentleyjs-tools/scripts/test-tsnode.js",
      "cwd": "${workspaceFolder}/source/test",
      "args": [
        "--packageRoot=${workspaceFolder}/source/test",
        "--testDir=${workspaceFolder}/source/test",
        "--debug"
      ],
      "port": 9229,
      "protocol": "inspector",
      "env":{
        "ADDON_PATH": "../source/test/node_modules/"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${file}",
      "outFiles": [
        "${workspaceRoot}/out/**/*.js"
      ]
    }
  ]
}