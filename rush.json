      "projectFolder": "ui/appui-layout-react",
      "reviewCategory": "frontend",
      "versionPolicyName": "prerelease-monorepo-lockStep"
    },
    {
      "packageName": "@itwin/appui-react",
      "projectFolder": "ui/appui-react",
      "reviewCategory": "frontend",
      "versionPolicyName": "prerelease-monorepo-lockStep"
    },
    {
